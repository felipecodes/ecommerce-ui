{
  "compilerOptions": {
    "types": ["react", "node", "jest"],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "baseUrl": "./src",
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": ["src/@types", "src/app/**/*", "test/**/*"],
  "exclude": ["config", "*.js"]
}
